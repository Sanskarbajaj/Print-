// upload-junit-to-xray.js
import fs from "fs";
import axios from "axios";
import FormData from "form-data";

async function uploadJUnit() {
  try {
    // Path of the junit.xml generated by Playwright
    const filePath = "./test-results/junit.xml"; // adjust path if needed

    // Create FormData
    const form = new FormData();
    form.append("file", fs.createReadStream(filePath));

    // Jira/Xray server URL
    const url = "https://jira.world.socgen/rest/raven/1.0/import/execution/junit?projectKey=BCM";

    // Send request
    const response = await axios.post(url, form, {
      headers: {
        ...form.getHeaders(),
        Authorization: "Basic " + Buffer.from("username:password").toString("base64"), // replace with your Jira creds or token
      },
    });

    console.log("✅ Uploaded successfully!");
    console.log("Response:", response.data);
  } catch (error) {
    console.error("❌ Upload failed:", error.response ? error.response.data : error.message);
  }
}

uploadJUnit();
